SELECT * FROM MSG_AUTH;

DROP TABLE MSG_AUTH;
create table MSG_AUTH(
 id NUMBER not null primary key,
 authCode varchar2(64) not null,
 phoneNumber varchar2(15) not null,
 regDate TIMESTAMP not null,
 expireDate Timestamp not null);
 
     CREATE SEQUENCE msgAuthSeq 
    START WITH 1
    INCREMENT BY 1
    MAXVALUE 1000000;
    \
    

    
    	INSERT INTO MSG_AUTH(
