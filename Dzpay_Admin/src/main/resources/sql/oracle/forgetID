		);
    SELECT * FROM MSG_AUTH;
    SELECT * FROM MSG_QUEUE ORDER BY mseq DESC;
    
    SELECT 'SUCC' AS RESULT
		FROM MSG_AUTH m
		WHERE 
     m.PHONENUMBER = '1234-1234' AND m.AUTHCODE = 'ABCD'
     AND SYSDATE BETWEEN m.REGDATE AND m.EXPIREDATE;
     
     
